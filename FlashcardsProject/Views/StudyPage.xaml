<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:dotnetMAUI.Flashcards.ViewModels"
             x:DataType="viewmodels:StudyViewModel"
             x:Class="dotnetMAUI.Flashcards.Views.StudyPage">
    <ContentPage.BindingContext>
        <viewmodels:StudyViewModel/>
    </ContentPage.BindingContext>
    
    <VerticalStackLayout
        Spacing="20">
        
        <Label 
            Text="Study"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="32"/>
        
        <VerticalStackLayout
            Spacing="20">
            <Label Text="{Binding FlashcardFront}"/>
            <Entry Placeholder="Your Answer"/>
            <Button Text="Submit"
                    MaximumWidthRequest="100"/>
        </VerticalStackLayout>

        <Label IsVisible="false"
               Text="{Binding ScoreText}"/>
        <Button
                Text="Back to Home"
                Command="{Binding GoBackHomeCommand}"
                MaximumWidthRequest="200"/>
        
    </VerticalStackLayout>
</ContentPage>